<h1>House of shoes</h1>
<br>

<h3>existing brands:</h3>
<div class="col-md-6">
  <% if @brands %>
    <% @brands.each() do |brand| %>
      <a href="/brand/<%= brand.id() %>"><b><%= brand.name() %>,</b> <%= brand.price() %></a>
    <% end %>
  <% end %>

  <h3>Add a brand:</h3>
  <form id="brand" action="/brand" method="post">
    <div class="form-group">
      <label for="name">What is the name of the brand?</label>
      <input type="text" name="name">
    </div>
    <div class="form-group">
      <label for="price">What is the price of the brand?</label>
      <input type="number" name="price">
    </div>
    <button type="submit" class="btn btn-primary">Add brand</button>
  </form>

</div>

<div class="col-md-6">

</div>
